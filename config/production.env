# API Configuration
API_URL=https://api.wickandwax.co
API_VERSION=v1
API_TIMEOUT=10000

# Database Configuration
DB_HOST=production-db.wickandwax.co
DB_PORT=5432
DB_NAME=wickandwax_prod
DB_USER=app_user
DB_CONNECTION_POOL_MIN=2
DB_CONNECTION_POOL_MAX=10
DB_STATEMENT_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=production-redis.wickandwax.co
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL=3600

# Session Configuration
SESSION_SECRET=your-production-session-secret
SESSION_DURATION=86400000

# Security
CORS_ORIGINS=https://wickandwax.co,https://www.wickandwax.co
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000
SSL_KEY_PATH=/etc/ssl/private/wickandwax.key
SSL_CERT_PATH=/etc/ssl/certs/wickandwax.crt

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEW_RELIC_APP_NAME=WickAndWax-Production

# CDN and Storage
CDN_URL=https://cdn.wickandwax.co
S3_BUCKET=wickandwax-production
S3_REGION=us-west-2
CLOUDFRONT_DISTRIBUTION_ID=your-cloudfront-id

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_STALE_WHILE_REVALIDATE=300

# Payment Processing
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Email Service
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@wickandwax.co
EMAIL_SUPPORT=support@wickandwax.co

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_MARKETING=true
ENABLE_PREFERENCES=true

# Performance
COMPRESSION_ENABLED=true
MINIFICATION_ENABLED=true
CACHE_CONTROL_MAX_AGE=31536000

# Error Reporting
ERROR_REPORTING_ENABLED=true
ERROR_NOTIFICATION_EMAIL=alerts@wickandwax.co

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=wickandwax-backups
BACKUP_RETENTION_DAYS=30

# Monitoring Thresholds
CPU_USAGE_THRESHOLD=80
MEMORY_USAGE_THRESHOLD=85
DISK_USAGE_THRESHOLD=90
API_LATENCY_THRESHOLD=2000
