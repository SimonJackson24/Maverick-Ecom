# Database
# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=wickandwax
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Revolut Payment
VITE_REVOLUT_API_KEY=your_revolut_api_key
VITE_REVOLUT_API_URL=https://merchant.revolut.com/api/1.0
VITE_REVOLUT_MERCHANT_ID=your_revolut_merchant_id

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_webhook_url
ALERT_EMAIL_FROM=alerts@wickandwax.co
ALERT_EMAIL_TO=security@wickandwax.co,admin@wickandwax.co
DASHBOARD_URL=http://localhost:3000

# Security
JWT_SECRET=your_jwt_secret_key
SESSION_SECRET=your_session_secret_key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:5173

# GraphQL
VITE_GRAPHQL_URL=http://localhost:4000/graphql

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id
FACEBOOK_PIXEL_ID=your_pixel_id
ENABLE_ANALYTICS=false

# Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_MARKETING=false

# Development Environment Configuration
VITE_APP_TITLE=Wick & Wax Co
VITE_API_URL=http://localhost:4000
VITE_MSW_ENABLED=true
NODE_ENV=development
