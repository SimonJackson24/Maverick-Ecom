# Server Configuration
NODE_ENV=production
PORT=4001
HOST=0.0.0.0
SESSION_SECRET=your_session_secret_here

# API Configuration
VITE_GRAPHQL_API_URL=https://api.your-domain.com/graphql
CORS_ORIGIN=https://your-domain.com

# Database Configuration
DATABASE_URL=postgresql://wickandwax:your_password_here@localhost:5432/wickandwax
POSTGRES_USER=wickandwax
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=wickandwax
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Security
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h
COOKIE_SECRET=your_cookie_secret_here
RATE_LIMIT_WINDOW=900000 # 15 minutes in milliseconds
RATE_LIMIT_MAX=100 # requests per window

# Feature Flags
VITE_ENABLE_AUTH=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_RATE_LIMITING=true

# External Services
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
VITE_GOOGLE_ANALYTICS_ID=your_ga_id

# Payment Integration
VITE_REVOLUT_API_KEY=your_revolut_api_key
VITE_REVOLUT_API_URL=https://merchant.revolut.com/api/1.0
VITE_REVOLUT_MERCHANT_ID=your_revolut_merchant_id

# Analytics & Monitoring
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_METRICS_PORT=9090

# Email Configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@your-domain.com

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=your-aws-region
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# CDN Configuration
VITE_CDN_URL=https://cdn.your-domain.com

# Legacy Migration (Optional)
MONGODB_URI=mongodb://localhost:27017/wickandwax
